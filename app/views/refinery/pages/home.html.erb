      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    
    <div class="carousel-inner">
      <div class="item active" style="background-color:#6C2065;">
	<div class="container">

	  <div class="col-sm-offset-6 col-sm-3">
